<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linerLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="uk.co.ecorunners.ecorunners.activity.ListCalendarActivity">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ecorunnerslogo" />

        <TextView
            android:id="@+id/weekView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TextView" />

        <TextView
            android:id="@+id/datesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TextView" />


        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:divider="@drawable/list_divider"
            android:dividerHeight="50px"
            android:headerDividersEnabled="false">

        </ListView>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/previousWeekBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_previous_background"
                android:layout_alignParentLeft="true"
                android:text="previous week" />

            <Button
                android:id="@+id/nextWeekBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_previous_background"
                android:text="Next Week" />

        </RelativeLayout>

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Home"
            android:background="@drawable/btn_home_background"/>

    </LinearLayout>
</ScrollView>